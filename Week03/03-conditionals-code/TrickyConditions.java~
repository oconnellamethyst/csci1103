public class SimpleConditions{
  public static void main(String args[]){
    int sum = 0, a=10, b=15, c=25;
    boolean addA = false;
    boolean addB = true;
    boolean addC = false;

    if(addA){
      sum = sum + a;
    }
    if(addB){
      sum = sum + b;
    }
    if(addC){
      sum = sum + c;
    }
    else{
      sum = sum * 2;
    }

    System.out.println("sum is "+sum);
  }
}
